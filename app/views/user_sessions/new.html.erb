<div class="container" style="max-width: 40%;">
  <div class="home-info-banner" >
    <div class="text-align-center">
      <h4>Log in</h4>
      <div class="mt-2"><small><i>New User ? <%= link_to "Click to Sign up" , new_user_path %></i></small></div>
    </div>
    <div class="card-body">
      <%= form_for @user_session do |f| %>
        <%= render 'shared/errors', object: @user_session %>

        <div class="form-group mb-3">
          <%= f.label :email %>
          <%= f.email_field :email, class: 'form-control' %>
        </div>

        <div class="form-group mb-3">
          <%= f.label :password %>
          <%= f.password_field :password, class: 'form-control' %>
        </div>

        <div class="form-group mb-2">
            <%= f.label :remember_me %>
            <%= f.check_box :remember_me %>
        </div>

        <%= f.submit 'Log in', class: 'btn btn-success text-align-center form-control mt-3' %>
      <% end %>
    </div>
  </div>
</div>


